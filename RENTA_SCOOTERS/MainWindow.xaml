<Window x:Class="RENTA_SCOOTERS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Captura de Foto" Height="450" Width="800">
    <Grid>
        <!-- Control Image para mostrar la cámara -->
        <Image x:Name="imgPreview" Width="519" Height="307" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="135,54,0,0" />

        <!-- Botones para tomar y eliminar foto -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button x:Name="btnTomarFoto" Content="Tomar Foto" Click="btnTomarFoto_Click" Margin="5" />
            <Button x:Name="btnEliminarFoto" Content="Eliminar Foto" Click="btnEliminarFoto_Click" Margin="5" />
        </StackPanel>
    </Grid>
</Window>
