<Window x:Class="RENTA_SCOOTERS.FORMULARIOS.usuario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Usuario" 
        Background="#FF5193EE"
        Height="720"
        Width="1280"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        ResizeMode="CanMinimize">
    <Grid Background="White" Margin="20,20,20,40">
        <Grid.RowDefinitions >
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <!-- Fila para el botón "Volver" -->
        </Grid.RowDefinitions>

        <StackPanel Margin="0,291,0,0" VerticalAlignment="Top" HorizontalAlignment="Center">
            <Label Content="Nombre:" FontSize="24" HorizontalAlignment="Center"/>
            <TextBox x:Name="nameTextBox" Width="400" Height="40" FontSize="18" Margin="0,0,0,20" MaxLength="50" TextWrapping="NoWrap" TextAlignment="Center"/>

            <Label Content="Contraseña:" FontSize="24" HorizontalAlignment="Center"/>
            <TextBox x:Name="passwordTextBox" Width="400" Height="40" FontSize="18" Margin="0,0,0,20" MaxLength="10" TextWrapping="NoWrap" TextAlignment="Center" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <!-- Botón Guardar Usuario -->
                <Button x:Name="GuardarUsuario" Content="" Width="200" Height="50" FontSize="18" 
                        Margin="10,0,0,0" Click="guardarusuario_Click" BorderThickness="0" Padding="0" 
                        FocusVisualStyle="{x:Null}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Image x:Name="ButtonImage" Source="/Images/GuardarUsuario.png" Stretch="Fill"/>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="ButtonImage" Property="Opacity" Value="0.7"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Botón Eliminar Usuario -->
                <Button x:Name="EliminarUsuario" Content="" Width="200" Height="50" FontSize="18" 
                        Margin="10,0,0,0" Click="eliminarusuario_Click" BorderThickness="0" Padding="0" 
                        FocusVisualStyle="{x:Null}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Image x:Name="ButtonImage" Source="/Images/EliminarUsuario.png" Stretch="Fill"/>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="ButtonImage" Property="Opacity" Value="0.7"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Botón Buscar Usuario -->
                <Button x:Name="BuscarUsuario" Content="" Width="200" Height="50" FontSize="18" 
                        Margin="10,0,0,0" Click="abrirBuscarUsuario_Click" BorderThickness="0" Padding="0" 
                        FocusVisualStyle="{x:Null}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Image x:Name="ButtonImage" Source="/Images/BuscarUsuario.png" Stretch="Fill"/>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="ButtonImage" Property="Opacity" Value="0.7"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </StackPanel>

        <!-- Colocar el botón "Volver" en la segunda fila del Grid -->
        <Button x:Name="paginaprincipal" Content="" FontSize="18" 
 HorizontalAlignment="Right" Margin="10" 
 Width="50" Height="50"
 Grid.Row="1" Click="paginaprincipal_Click" 
 BorderThickness="0" Padding="0" FocusVisualStyle="{x:Null}">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Image x:Name="ButtonImage" Source="/Images/VOLVER.png" Stretch="Fill"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ButtonImage" Property="Opacity" Value="0.7"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Image Source="/Images/usuario.png" HorizontalAlignment="Center" Height="199" Margin="0,87,0,0" VerticalAlignment="Top" Width="536"/>
    </Grid>
</Window>
