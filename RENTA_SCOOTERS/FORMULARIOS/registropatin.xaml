<Window x:Class="RENTA_SCOOTERS.FORMULARIOS.registropatin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Patines" 
        Background="#FF5193EE"
        Height="720"
        Width="1280"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        ResizeMode="CanMinimize">
    <Grid Background="White" Margin="20,20,20,40">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <!-- Fila para el botón "Volver" -->
        </Grid.RowDefinitions>

        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Margin="692,26,0,0" Grid.RowSpan="2">
            <Label Content="Nombre del Patin:" FontSize="24" HorizontalAlignment="Center"/>
            <TextBox x:Name="nameTextBox" Width="400" Height="40" FontSize="18" Margin="0,0,0,20"  MaxLength="20"  TextWrapping="NoWrap" TextAlignment="Center"/>

            <!-- Etiqueta e Imagen para mostrar la imagen cargada -->
            <Label Content="Imagen:" FontSize="24" HorizontalAlignment="Center"/>

            <!-- Botón para cargar imagen -->
            <Button x:Name="cargarImagenButton" Content="" Width="200" Height="50" FontSize="18" 
        Click="CargarImagen_Click" BorderThickness="0" Padding="0" FocusVisualStyle="{x:Null}">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Image x:Name="ButtonImage" Source="/Images/CARGAR IMAGEN.png" Stretch="Fill"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonImage" Property="Opacity" Value="0.7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>



            <!-- Imagen donde se mostrará la imagen seleccionada -->
            <Image x:Name="imagenPatin" Width="400" Height="300" Margin="0,20,0,20" HorizontalAlignment="Center" Stretch="Uniform"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button x:Name="guardarusuario" Content="" Width="200" Height="50" FontSize="18" 
        Click="GuardarScooter_Click" BorderThickness="0" Padding="0" FocusVisualStyle="{x:Null}"
        Margin="0,0,15,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Image x:Name="ButtonImage" Source="/Images/GuardarScooter.png" Stretch="Fill"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="ButtonImage" Property="Opacity" Value="0.7"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button x:Name="abrirBuscarUsuario" Content="" Width="200" Height="50" FontSize="18" 
        Click="BuscarScooter_Click" BorderThickness="0" Padding="0" FocusVisualStyle="{x:Null}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Image x:Name="ButtonImage" Source="/Images/BuscarScooter.png" Stretch="Fill"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="ButtonImage" Property="Opacity" Value="0.7"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>



            </StackPanel>
        </StackPanel>

        <!-- Colocar el botón "Volver" en la segunda fila del Grid -->
        <Button x:Name="paginaprincipal" Content="" FontSize="18" 
        HorizontalAlignment="Right" Margin="10" 
        Width="50" Height="50"
        Grid.Row="1" Click="paginaprincipal_Click" 
        BorderThickness="0" Padding="0" FocusVisualStyle="{x:Null}">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Image x:Name="ButtonImage" Source="/Images/VOLVER.png" Stretch="Fill"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ButtonImage" Property="Opacity" Value="0.7"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>



        <Image Source="/Images/SCOOTERS SDL CARGA.png" HorizontalAlignment="Left" Height="410" Margin="102,117,0,0" VerticalAlignment="Top" Width="646"/>
    </Grid>
</Window>
