<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:RENTA_SCOOTERS.FORMULARIOS"
    xmlns:Viewer="clr-namespace:SAPBusinessObjects.WPF.Viewer;assembly=SAPBusinessObjects.WPF.Viewer" 
    x:Class="RENTA_SCOOTERS.FORMULARIOS.reportealquiler"
    mc:Ignorable="d"
    Title="reportealquiler" 
    Background="#FF5193EE"
    Height="720"
    Width="1280"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    ResizeMode="CanMinimize">

    <Grid>
        <!-- Visualizador de Crystal Reports -->
        <Viewer:CrystalReportsViewer 
            x:Name="crystalReportViewer"
            Margin="20,26,20,60"/>

        <!-- Botón de volver -->
        <Button 
            x:Name="volverButton" 
            Width="61" 
            Height="40" 
            FontSize="18" 
            BorderThickness="0" 
            Padding="0" 
            HorizontalAlignment="Right" 
            VerticalAlignment="Bottom" 
            Margin="0,0,20,10"
            FocusVisualStyle="{x:Null}" 
            RenderTransformOrigin="1.999,0.447" Click="volverButton_Click">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid>
                        <Image 
                            x:Name="ButtonImage" 
                            Source="/Images/devolver.png" 
                            Stretch="Fill"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ButtonImage" Property="Opacity" Value="0.7"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>
