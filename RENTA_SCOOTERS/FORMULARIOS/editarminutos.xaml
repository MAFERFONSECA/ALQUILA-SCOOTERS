<Window x:Class="RENTA_SCOOTERS.FORMULARIOS.editarminutos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="editarminutos" Background="#FF5193EE"
        Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        ResizeMode="CanMinimize"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                   Text="¡Actualiza los costos!" FontSize="48"
                   Foreground="White" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,20,0,20" />

        <DataGrid x:Name="dataGrid" Grid.Row="1" Grid.Column="0" Margin="111,0,128,70"
                  AutoGenerateColumns="False" HeadersVisibility="Column"
                  SelectionChanged="dataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding MIN_ID}" Width="*" />
                <DataGridTextColumn Header="Minutos" Binding="{Binding MIN_TIEMPO}" Width="*" />
                <DataGridTextColumn Header="Costo" Binding="{Binding MIN_COSTO}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Grid.Column="1" Margin="108,118,0,0" VerticalAlignment="Top" HorizontalAlignment="Left">
            <TextBlock Text="Minutos:" FontSize="18" Margin="0,0,0,10" />
            <TextBox x:Name="txtMinutos" FontSize="16" Width="250" Margin="0,0,0,20" />

            <TextBlock Text="Costo:" FontSize="18" Margin="0,0,0,10" />
            <TextBox x:Name="txtCosto" FontSize="16" Width="250" Margin="0,0,0,20" />

            <Button x:Name="btnModificar" Width="250" Height="60" BorderThickness="0" Padding="0"
                    FocusVisualStyle="{x:Null}" Click="btnModificar_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Rectangle Fill="#FF5193EE" RadiusX="10" RadiusY="10" />
                            <Image x:Name="ButtonImage" Source="/Images/guardarminutos.png" Stretch="Fill" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonImage" Property="Opacity" Value="0.7" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button x:Name="btnEliminar" Width="250" Height="60" BorderThickness="0" Padding="0"
                    FocusVisualStyle="{x:Null}" Click="btnEliminar_Click" Margin="0,20,0,0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Rectangle Fill="#FF5193EE" RadiusX="10" RadiusY="10" />
                            <Image x:Name="ButtonImage" Source="/Images/eliminarminutos.png" Stretch="Fill" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonImage" Property="Opacity" Value="0.7" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>

        <Button x:Name="volverButton" Width="100" Height="50" Grid.Row="1" Grid.ColumnSpan="2"
                HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20"
                BorderThickness="0" Padding="0"
                FocusVisualStyle="{x:Null}" Click="volverButton_Click">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid>
                        <Rectangle Fill="#FF5193EE" RadiusX="10" RadiusY="10" />
                        <Image x:Name="ButtonImage" Source="/Images/devolver.png" Stretch="Fill" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ButtonImage" Property="Opacity" Value="0.7" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>






