<Window x:Class="ALQUILER_SCOOTERS.FORMULARIOS.carga"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ALQUILER_SCOOTERS.FORMULARIOS"
        mc:Ignorable="d"
        Title="carga" 
        Background="#FF5193EE"
        Height="720"
        Width="1280"
        WindowStartupLocation="CenterScreen"
         WindowState="Maximized"
        ResizeMode="CanMinimize">
    <Grid Background="#FF1A68D4" Margin="20,20,20,40" Loaded="Grid_Loaded">
        <!-- Contenedor para centrar el logo y ajustar su tamaño -->
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Rectangle Width="280" Height="257" Margin="10,-98,-10,98">
                <!-- Tamaño ajustado -->
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/Images/SCOOTERS SDL CARGA.png"/>
                </Rectangle.Fill>
            </Rectangle>
        </Grid>

        <!-- Barra de progreso en la parte inferior -->
        <ProgressBar x:Name="ProgressBar" HorizontalAlignment="Center" Height="10" VerticalAlignment="Top" Margin="0,527,0,0" Width="608"/>
    </Grid>
</Window>
