<Window x:Class="ALQUILER_SCOOTERS.FORMULARIOS.Mapa"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ALQUILER_SCOOTERS.FORMULARIOS"
        mc:Ignorable="d"
        Title="Mapa"   
        Background="#FF5193EE"
        Height="720"
        Width="1280"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    <Grid Background="White" Margin="20,20,20,40">
        <Canvas Name="MapCanvas" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Canvas.Background>
                <ImageBrush ImageSource="pack://application:,,,/Images/mapasdl.png"/>
            </Canvas.Background>
            <!-- Puntos del KML se agregarán dinámicamente aquí -->
        </Canvas>
    </Grid>
</Window>
