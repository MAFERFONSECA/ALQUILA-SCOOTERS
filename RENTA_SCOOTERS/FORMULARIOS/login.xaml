<Window x:Class="ALQUILER_SCOOTERS.FORMULARIOS.login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Login"    
        Background="#FF5193EE"
        Height="720"
        Width="1280"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        ResizeMode="CanMinimize">
    <Grid Background="#FF1A68D4" Margin="20,20,20,40">
        <!-- Panel de login centrado -->
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,60,0,0">
            <Rectangle Width="414" Height="398" Stroke="Black">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/Images/PANEL LOGIN.png"/>
                </Rectangle.Fill>
            </Rectangle>
        </Grid>

        <!-- Logo centrado y con tamaño ajustado -->
        <Grid HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,0">
            <Rectangle Width="209" Height="187" Margin="10,62,-10,-62">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/Images/SCOOTERS SDL CARGA.png"/>
                </Rectangle.Fill>
            </Rectangle>
        </Grid>

        <!-- Elementos del formulario -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,260,0,0" Width="350">
            <!-- Etiqueta de usuario -->
            <Label Content="USUARIO:" Foreground="White" FontSize="18" FontWeight="Bold" Margin="0,10"/>
            <Grid>
                <TextBox x:Name="TXTUSUARIO" TextWrapping="Wrap" Width="309" Height="39" MaxLength="50" FontSize="16" TextAlignment="Center" 
                         VerticalAlignment="Top" Foreground="Black"
                         GotFocus="TXTUSUARIO_GotFocus" LostFocus="TXTUSUARIO_LostFocus"/>
                <TextBlock x:Name="PlaceholderUsuario" Text="Ingrese su usuario" 
                           FontSize="16" Foreground="Gray" VerticalAlignment="Center" HorizontalAlignment="Center" IsHitTestVisible="False"/>
            </Grid>

            <!-- Etiqueta de contraseña -->
            <Label Content="CONTRASEÑA:" Foreground="White" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
            <Grid>
                <PasswordBox x:Name="TXTCONTRASEÑA"
             Width="309" Height="39"
             FontSize="16"
             VerticalAlignment="Center"
             HorizontalAlignment="Center"
             Padding="0,10,0,0" 
             GotFocus="TXTCONTRASEÑA_GotFocus"
             LostFocus="TXTCONTRASEÑA_LostFocus"
             HorizontalContentAlignment="Center" />

                <TextBlock x:Name="PlaceholderContrasena" Text="Ingrese su contraseña" 
                           FontSize="16" Foreground="Gray" VerticalAlignment="Center" HorizontalAlignment="Center" IsHitTestVisible="False"/>
            </Grid>

            <!-- Botón de ingreso -->
            <Button x:Name="INGRESAR" Content="INGRESAR" Width="150" Height="40" Margin="0,30,0,0"
                    Background="White" Foreground="#1A68D4" FontWeight="Bold"
                    BorderBrush="White" BorderThickness="2" Click="INGRESAR_Click"/>
        </StackPanel>
    </Grid>
</Window>
